<%# Press Page %>
<div class="bg-white">
  <%# Hero Section %>
  <div class="relative py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl font-extrabold tracking-tight text-gray-900 sm:text-5xl md:text-6xl">
          Press & Media
        </h1>
        <p class="mt-4 max-w-2xl mx-auto text-xl text-gray-500">
          Latest news, press releases, and media resources
        </p>
      </div>
    </div>
  </div>

  <%# Press Releases %>
  <div class="py-12 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="lg:text-center mb-12">
        <h2 class="text-base text-indigo-600 font-semibold tracking-wide uppercase">Press Releases</h2>
        <p class="mt-2 text-3xl font-extrabold text-gray-900">Latest Announcements</p>
      </div>

      <div class="mt-10 space-y-8">
        <%# Press Release Card %>
        <div class="bg-white shadow rounded-lg overflow-hidden">
          <div class="p-6">
            <div class="flex items-center">
              <div class="flex-1">
                <p class="text-sm text-indigo-600 font-semibold">March 1, 2024</p>
                <h3 class="mt-2 text-xl font-semibold text-gray-900">
                  Company Announces Expansion into European Markets
                </h3>
                <p class="mt-3 text-base text-gray-500">
                  Our company is excited to announce its expansion into key European markets, 
                  bringing our innovative e-commerce solutions to a broader audience.
                </p>
              </div>
              <div class="ml-6">
                <a href="#" class="text-indigo-600 hover:text-indigo-500 font-medium">
                  Read More <span aria-hidden="true">→</span>
                </a>
              </div>
            </div>
          </div>
        </div>

        <%# Press Release Card %>
        <div class="bg-white shadow rounded-lg overflow-hidden">
          <div class="p-6">
            <div class="flex items-center">
              <div class="flex-1">
                <p class="text-sm text-indigo-600 font-semibold">February 15, 2024</p>
                <h3 class="mt-2 text-xl font-semibold text-gray-900">
                  New Sustainable Packaging Initiative Launched
                </h3>
                <p class="mt-3 text-base text-gray-500">
                  We're proud to announce our new sustainable packaging initiative, 
                  reducing our environmental impact while maintaining product quality.
                </p>
              </div>
              <div class="ml-6">
                <a href="#" class="text-indigo-600 hover:text-indigo-500 font-medium">
                  Read More <span aria-hidden="true">→</span>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%# Media Resources %>
  <div class="py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="lg:text-center mb-12">
        <h2 class="text-base text-indigo-600 font-semibold tracking-wide uppercase">Media Resources</h2>
        <p class="mt-2 text-3xl font-extrabold text-gray-900">Brand Assets</p>
      </div>

      <div class="mt-10 grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3">
        <%# Resource Card %>
        <div class="bg-white shadow rounded-lg overflow-hidden">
          <div class="p-6">
            <div class="flex items-center justify-center h-12 w-12 rounded-md bg-indigo-500 text-white mb-4">
              <i class="fas fa-images text-xl"></i>
            </div>
            <h3 class="text-lg font-medium text-gray-900">Logo Package</h3>
            <p class="mt-2 text-base text-gray-500">
              Download our official logos in various formats
            </p>
            <div class="mt-4">
              <a href="#" class="text-indigo-600 hover:text-indigo-500 font-medium">
                Download <span aria-hidden="true">→</span>
              </a>
            </div>
          </div>
        </div>

        <%# Resource Card %>
        <div class="bg-white shadow rounded-lg overflow-hidden">
          <div class="p-6">
            <div class="flex items-center justify-center h-12 w-12 rounded-md bg-indigo-500 text-white mb-4">
              <i class="fas fa-file-alt text-xl"></i>
            </div>
            <h3 class="text-lg font-medium text-gray-900">Media Kit</h3>
            <p class="mt-2 text-base text-gray-500">
              Access our comprehensive media kit and brand guidelines
            </p>
            <div class="mt-4">
              <a href="#" class="text-indigo-600 hover:text-indigo-500 font-medium">
                Download <span aria-hidden="true">→</span>
              </a>
            </div>
          </div>
        </div>

        <%# Resource Card %>
        <div class="bg-white shadow rounded-lg overflow-hidden">
          <div class="p-6">
            <div class="flex items-center justify-center h-12 w-12 rounded-md bg-indigo-500 text-white mb-4">
              <i class="fas fa-camera text-xl"></i>
            </div>
            <h3 class="text-lg font-medium text-gray-900">Photo Gallery</h3>
            <p class="mt-2 text-base text-gray-500">
              High-resolution photos for media use
            </p>
            <div class="mt-4">
              <a href="#" class="text-indigo-600 hover:text-indigo-500 font-medium">
                View Gallery <span aria-hidden="true">→</span>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%# Contact Section %>
  <div class="bg-gray-50 py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h2 class="text-3xl font-extrabold text-gray-900">
          Media Inquiries
        </h2>
        <p class="mt-4 text-lg text-gray-500">
          For press inquiries, please contact our media relations team
        </p>
        <div class="mt-8">
          <a href="mailto:press@example.com" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700">
            Contact Press Team
          </a>
        </div>
      </div>
    </div>
  </div>
</div> 