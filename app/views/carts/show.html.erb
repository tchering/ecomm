<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <h2 class="text-2xl font-bold tracking-tight text-gray-900 mb-8">Shopping Cart</h2>

  <div class="lg:grid lg:grid-cols-12 lg:gap-x-12 lg:items-start">
    <!-- Cart Items -->
    <section class="lg:col-span-8">
      <div class="space-y-6 max-h-[calc(100vh-16rem)] overflow-y-auto pr-4 -mr-4">
        <% if @cart.cart_items.any? %>
          <%= render partial: 'cart_items/cart_item', collection: @cart.cart_items %>
        <% else %>
          <%= render 'empty_cart' %>
        <% end %>
      </div>
    </section>

    <!-- Order Summary -->
    <section class="mt-8 lg:mt-0 lg:col-span-4" id="order_summary">
      <%= render 'order_summary', cart: @cart %>
    </section>
  </div>
</div>
      </div>
    </section>
  </div>
</div>
