<%# encoding: utf-8 %>
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <h2 class="text-2xl font-bold tracking-tight text-gray-900 mb-8">Shopping Cart</h2>
  <div class="lg:grid lg:grid-cols-12 lg:gap-x-12 lg:items-start">
    <!-- Cart Items -->
    <section class="lg:col-span-8">
      <div class="space-y-6 max-h-[calc(100vh-16rem)] overflow-y-auto pr-4 -mr-4">
        <% if @cart_items.any? %>
          <%= render partial: 'cart_items/cart_item', collection: @cart_items %>
        <% else %>
          <%= render 'empty_cart' %>
        <% end %>
      </div>
    </section>
    <!-- Order Summary -->
    <section class="mt-8 lg:mt-0 lg:col-span-4" id="order_summary">
      <% if @cart_items.any? %>
        <%= render 'order_summary', cart: @cart %>
      <% else %>
        <div class="bg-white p-6 border border-gray-200 rounded-lg shadow-sm">
          <div class="space-y-4">
            <div class="flex items-center justify-between">
              <span class="text-base text-gray-900">Subtotal</span>
              <span class="text-base font-medium text-gray-900 tabular-nums" id="cart_total">&euro;0.00</span>
            </div>
            <div class="flex items-center justify-between">
              <div class="flex items-center gap-1">
                <span class="text-base text-gray-900">Tax</span>
                <span class="text-sm text-gray-500">(13%)</span>
              </div>
              <span class="text-base font-medium text-gray-900 tabular-nums" id="cart_tax">&euro;0.00</span>
            </div>
            <div class="flex items-center justify-between border-t border-gray-200 pt-4">
              <span class="text-base font-medium text-gray-900">Total</span>
              <span class="text-base font-medium text-gray-900 tabular-nums" id="cart_order_total">&euro;0.00</span>
            </div>
            <p class="text-sm text-gray-500">Shipping and taxes calculated at checkout.</p>
            <div class="text-center">
              <%= link_to 'Continue Shopping', root_path, 
                  class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-base font-medium text-white bg-indigo-600 hover:bg-indigo-700" %>
            </div>
          </div>
        </div>
      <% end %>
    </section>
  </div>
</div>
