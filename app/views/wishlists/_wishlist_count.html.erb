<%# Wishlist count badge %>
<% if count && count > 0 %>
  <div id="wishlist_count" class="wishlist-count-badge flex items-center gap-1">
    <span class="bg-indigo-600 text-white text-xs rounded-full px-2 py-0.5 min-w-[1.25rem] text-center">
      <%= count %>
    </span>
    <i class="fas fa-heart"></i>
  </div>
<% end %> 