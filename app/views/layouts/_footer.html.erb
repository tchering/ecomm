<%# encoding: utf-8 %>
<footer class="bg-white border-t border-gray-200 mt-5">
  <div class="max-w-screen-2xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Footer Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Company Info -->
      <div class="space-y-4">
        <h3 class="text-sm font-medium tracking-[0.2em] uppercase">About Us</h3>
        <ul class="space-y-2">
          <li><%= link_to "Our Story", about_path, class: "text-sm text-gray-600 hover:text-gray-900" %></li>
          <li><%= link_to "Careers", careers_path, class: "text-sm text-gray-600 hover:text-gray-900" %></li>
          <li><%= link_to "Press", press_path, class: "text-sm text-gray-600 hover:text-gray-900" %></li>
          <li><%= link_to "Blog", blog_path, class: "text-sm text-gray-600 hover:text-gray-900" %></li>
        </ul>
      </div>

      <!-- Customer Service -->
      <div class="space-y-4">
        <h3 class="text-sm font-medium tracking-[0.2em] uppercase">Customer Service</h3>
        <ul class="space-y-2">
          <li><%= link_to "Contact Us", new_contact_inquiry_path, class: "text-sm text-gray-600 hover:text-gray-900" %></li>
          <li><a href="#" class="text-sm text-gray-600 hover:text-gray-900">Shipping & Returns</a></li>
          <li><%= link_to "FAQ", faqs_path, class: "text-sm text-gray-600 hover:text-gray-900" %></li>
          <li><a href="#" class="text-sm text-gray-600 hover:text-gray-900">Size Guide</a></li>
        </ul>
      </div>

      <!-- Legal -->
      <div class="space-y-4">
        <h3 class="text-sm font-medium tracking-[0.2em] uppercase">Legal</h3>
        <ul class="space-y-2">
          <li><%= link_to "Privacy Policy", privacy_policy_path, class: "text-sm text-gray-600 hover:text-gray-900" %></li>
          <li><%= link_to "Terms of Service", terms_of_service_path, class: "text-sm text-gray-600 hover:text-gray-900" %></li>
          <li><%= link_to "Cookie Policy", cookie_policy_path, class: "text-sm text-gray-600 hover:text-gray-900" %></li>
          <li><%= link_to "Accessibility", accessibility_path, class: "text-sm text-gray-600 hover:text-gray-900" %></li>
        </ul>
      </div>

      <!-- Newsletter -->
      <div class="space-y-4">
        <h3 class="text-sm font-medium tracking-[0.2em] uppercase">Stay Connected</h3>
        <p class="text-sm text-gray-600">Subscribe to our newsletter for exclusive offers and updates</p>
        <%= form_with model: NewsletterSubscription.new, class: "space-y-2", data: { turbo: false } do |f| %>
          <%= f.email_field :email, placeholder: "Enter your email", required: true, class: "w-full px-4 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-200" %>
          <%= f.text_field :name, placeholder: "Your name (optional)", class: "w-full px-4 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-200" %>
          <%= f.submit "Subscribe", class: "w-full px-4 py-2 text-sm text-white bg-gray-900 rounded-md hover:bg-gray-800 transition-colors" %>
        <% end %>
      </div>
    </div>

    <!-- Social Media & Copyright -->
    <div class="mt-12 pt-8 border-t border-gray-200">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        <!-- Social Links -->
        <div class="flex space-x-6">
          <a href="#" class="text-gray-600 hover:text-gray-900">
            <i class="fab fa-facebook-f"></i>
          </a>
          <a href="#" class="text-gray-600 hover:text-gray-900">
            <i class="fab fa-instagram"></i>
          </a>
          <a href="#" class="text-gray-600 hover:text-gray-900">
            <i class="fab fa-twitter"></i>
          </a>
          <a href="#" class="text-gray-600 hover:text-gray-900">
            <i class="fab fa-pinterest"></i>
          </a>
        </div>
        <!-- Copyright -->
        <div class="text-sm text-gray-600">
          Â© <%= Time.current.year %> Your Store Name. All rights reserved.
        </div>
      </div>
    </div>
  </div>
</footer>
