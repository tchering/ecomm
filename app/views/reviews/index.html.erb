<%# Reviews index page %>
<div class="reviews-container max-w-4xl mx-auto py-8 px-4">
  <%# Header section %>
  <div class="reviews-header mb-8">
    <h1 class="text-3xl font-bold mb-2">Reviews for <%= @product.name %></h1>
    <div class="flex items-center justify-between">
      <div class="rating-summary flex items-center">
        <div class="average-rating text-2xl font-bold mr-4">
          <%= @product.average_rating.round(1) %> out of 5
        </div>
        <div class="star-display text-xl text-yellow-400">
          <% @product.average_rating.round.times do %>
            <i class="fas fa-star"></i>
          <% end %>
          <% (5 - @product.average_rating.round).times do %>
            <i class="far fa-star"></i>
          <% end %>
        </div>
        <div class="total-reviews text-gray-600 ml-4">
          (<%= @product.reviews.approved.count %> reviews)
        </div>
      </div>
      <% if user_signed_in? %>
        <%= link_to new_product_review_path(@product), class: "btn-primary bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition-colors" do %>
          <i class="fas fa-plus mr-2"></i> Write a Review
        <% end %>
      <% end %>
    </div>
  </div>
  <%# Filters and sorting section %>
  <div class="filters-section bg-gray-50 rounded-lg p-4 mb-8">
    <div class="flex items-center justify-between">
      <%# Rating filter %>
      <div class="rating-filter">
        <label class="block text-sm font-medium text-gray-700 mb-2">Filter by Rating</label>
        <div class="flex space-x-2">
          <% (1..5).each do |rating| %>
            <%= link_to product_reviews_path(@product, rating: rating),
                        class: "px-3 py-1 rounded-full #{params[:rating].to_i == rating ? 'bg-blue-600 text-white' : 'bg-white text-gray-700 hover:bg-gray-100'}" do %>
              <%= rating %> <i class="fas fa-star text-yellow-400 ml-1"></i>
            <% end %>
          <% end %>
          <% if params[:rating].present? %>
            <%= link_to "Clear", product_reviews_path(@product),
                        class: "px-3 py-1 rounded-full bg-gray-200 text-gray-700 hover:bg-gray-300" %>
          <% end %>
        </div>
      </div>
      <%# Sort options %>
      <div class="sort-options">
        <label class="block text-sm font-medium text-gray-700 mb-2">Sort by</label>
        <%= form_tag product_reviews_path(@product), method: :get, class: "flex" do %>
          <%= select_tag :sort,
                        options_for_select([
                          ['Most Recent', 'most_recent'],
                          ['Highest Rating', 'highest_rating'],
                          ['Lowest Rating', 'lowest_rating']
                        ], params[:sort]),
                        class: "form-select rounded-lg border-gray-300 focus:border-blue-500 focus:ring-blue-500",
                        onchange: 'this.form.submit()' %>
        <% end %>
      </div>
    </div>
  </div>
  <%# Reviews list %>
  <div class="reviews-list space-y-6">
    <% if @reviews.any? %>
      <%= render @reviews %>
      <%# Pagination %>
      <div class="pagination-container mt-8">
        <%= paginate @reviews, theme: 'tailwind' %>
      </div>
    <% else %>
      <div class="empty-state text-center py-12">
        <i class="fas fa-comment-slash text-4xl text-gray-400 mb-4"></i>
        <h3 class="text-xl font-semibold text-gray-700 mb-2">No Reviews Yet</h3>
        <p class="text-gray-600">Be the first to review this product!</p>
      </div>
    <% end %>
  </div>
</div>
<%# Image preview modal %>
<div id="image-modal" class="fixed inset-0 bg-black bg-opacity-75 hidden z-50" data-controller="modal">
  <div class="flex items-center justify-center min-h-screen p-4">
    <div class="relative">
      <button class="absolute top-4 right-4 text-white text-2xl hover:text-gray-300"
              data-action="click->modal#close">
        <i class="fas fa-times"></i>
      </button>
      <img src="" alt="Review image" class="max-w-full max-h-[80vh] object-contain" data-modal-target="image">
    </div>
  </div>
</div>
 