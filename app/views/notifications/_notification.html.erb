<%= turbo_frame_tag dom_id(notification) do %>
  <div class="notification <%= notification.read_at ? 'bg-gray-50' : 'bg-blue-50' %> p-4 mb-2 rounded-lg shadow-sm">
    <div class="flex items-start">
      <div class="flex-1">
        <h3 class="text-sm font-medium text-gray-900">
          <%= notification.title %>
        </h3>
        <p class="mt-1 text-sm text-gray-500">
          <%= notification.message %>
        </p>
        <div class="mt-2 text-xs text-gray-400">
          <%= time_ago_in_words(notification.created_at) %> ago
        </div>
      </div>
      <div class="ml-4 flex-shrink-0">
        <% unless notification.read_at %>
          <%= button_to 'Mark as Read', mark_as_read_admin_notification_path(notification), 
              method: :patch,
              class: "text-xs text-blue-600 hover:text-blue-800" %>
        <% end %>
      </div>
    </div>
  </div>
<% end %> 