<%= form_with(model: [:admin,admin_order], class: "contents") do |form| %>
  <% if admin_order.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(admin_order.errors.count, "error") %> prohibited this admin_order from being saved:</h2>
      <ul class="list-disc ml-6">
        <% admin_order.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border outline-hidden px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": admin_order.errors[:name].none?, "border-red-400 focus:outline-red-600": admin_order.errors[:name].any?}] %>
  </div>
  <div class="my-5">
    <%= form.label :email %>
    <%= form.text_field :email, class: ["block shadow-sm rounded-md border outline-hidden px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": admin_order.errors[:email].none?, "border-red-400 focus:outline-red-600": admin_order.errors[:email].any?}] %>
  </div>
  <div class="my-5">
    <%= form.label :address %>
    <%= form.text_field :address, class: ["block shadow-sm rounded-md border outline-hidden px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": admin_order.errors[:address].none?, "border-red-400 focus:outline-red-600": admin_order.errors[:address].any?}] %>
  </div>
  <div class="my-5">
    <%= form.label :total %>
    <%= form.text_field :total, class: ["block shadow-sm rounded-md border outline-hidden px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": admin_order.errors[:total].none?, "border-red-400 focus:outline-red-600": admin_order.errors[:total].any?}] %>
  </div>
  <div class="my-5">
    <%= form.label :status %>
    <%= form.select :status, Order.statuses.keys.map {|status|[status.humanize, status]},class:"" %>
  </div>
  <div class="inline">
    <%= form.submit class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
