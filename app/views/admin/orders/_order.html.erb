<!-- Mobile Card View -->
<div class="md:hidden block">
  <div class="bg-white rounded-lg shadow-sm mb-4 p-4">
    <div class="flex items-center justify-between mb-3">
      <div>
        <span class="text-xs text-gray-500">Order ID:</span>
        <%= link_to admin_order_path(order) do %>
          <span class="text-sm font-medium text-blue-600 underline"><%= order.id %></span>
        <% end %>
      </div>
      <div class="text-sm font-medium px-3 py-1 rounded-full
        <%= case order.status
          when 'pending'
            'bg-yellow-100 text-yellow-800'
          when 'processing'
            'bg-blue-100 text-blue-800'
          when 'completed'
            'bg-green-100 text-green-800'
          when 'cancelled'
            'bg-red-100 text-red-800'
          else
            'bg-gray-100 text-gray-800'
          end %>">
        <%= order.status.titleize %>
      </div>
    </div>
    <div class="space-y-2">
      <div class="flex justify-between">
        <span class="text-xs text-gray-500">Customer Email:</span>
        <span class="text-sm text-gray-900"><%= order.email %></span>
      </div>
      <div class="flex justify-between">
        <span class="text-xs text-gray-500">Shipping Address:</span>
        <span class="text-sm text-gray-900 text-right"><%= order.address %></span>
      </div>
      <div class="flex justify-between pt-2 border-t">
        <span class="text-sm font-medium text-gray-900">Total Amount:</span>
        <span class="text-sm font-bold text-gray-900"><%= number_to_currency(order.total) %></span>
      </div>
    </div>
  </div>
</div>
<!-- Desktop/Tablet Table View -->
<tr id="<%= dom_id order %>" class="hidden md:table-row hover:bg-gray-50">
  <td class="px-6 py-4">
    <%= link_to admin_order_path(order) do %>
      <div class="text-sm text-blue-600 underline"><%= order.id %></div>
    <% end %>
  </td>
  <td class="px-6 py-4">
    <div class="text-sm text-gray-900"><%= order.email %></div>
  </td>
  <td class="px-6 py-4">
    <div class="text-sm text-gray-500 line-clamp-1"><%= order.address %></div>
  </td>
  <td class="px-6 py-4">
    <div class="inline-flex text-sm font-medium px-3 py-1 rounded-full
      <%= case order.status
        when 'pending'
          'bg-yellow-100 text-yellow-800'
        when 'processing'
          'bg-blue-100 text-blue-800'
        when 'completed'
          'bg-green-100 text-green-800'
        when 'cancelled'
          'bg-red-100 text-red-800'
        else
          'bg-gray-100 text-gray-800'
        end %>">
      <%= order.status.titleize %>
    </div>
  </td>
  <td class="px-6 py-4">
    <div class="text-sm font-medium text-gray-900"><%= number_to_currency(order.total) %></div>
  </td>
</tr>
