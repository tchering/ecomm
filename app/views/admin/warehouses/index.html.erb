<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-900">Warehouses</h1>
    <%= link_to new_admin_warehouse_path, class: "px-4 py-2 bg-blue-600 rounded-md text-white hover:bg-blue-700 flex items-center" do %>
      <i class="fas fa-plus mr-2"></i> Add New Warehouse
    <% end %>
  </div>
  <% if notice.present? %>
    <div class="bg-green-50 border-l-4 border-green-500 p-4 mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <i class="fas fa-check-circle text-green-500"></i>
        </div>
        <div class="ml-3">
          <p class="text-sm text-green-700"><%= notice %></p>
        </div>
      </div>
    </div>
  <% end %>
  <% if alert.present? %>
    <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <i class="fas fa-exclamation-circle text-red-500"></i>
        </div>
        <div class="ml-3">
          <p class="text-sm text-red-700"><%= alert %></p>
        </div>
      </div>
    </div>
  <% end %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @warehouses.each do |warehouse| %>
      <div class="bg-white shadow-md rounded-lg overflow-hidden">
        <div class="p-6">
          <div class="flex justify-between items-start">
            <h2 class="text-xl font-semibold text-gray-900"><%= warehouse.name %></h2>
            <div class="flex space-x-2">
              <%= link_to edit_admin_warehouse_path(warehouse), class: "text-blue-600 hover:text-blue-900" do %>
                <i class="fas fa-edit"></i>
              <% end %>
              <%= button_to admin_warehouse_path(warehouse), method: :delete, class: "text-red-600 hover:text-red-900", data: { confirm: "Are you sure you want to delete this warehouse?" } do %>
                <i class="fas fa-trash"></i>
              <% end %>
            </div>
          </div>
          <p class="text-gray-600 mt-2">
            <i class="fas fa-map-marker-alt mr-2"></i> <%= warehouse.location %>
          </p>
          <% if warehouse.description.present? %>
            <p class="text-gray-500 mt-2 text-sm"><%= truncate(warehouse.description, length: 100) %></p>
          <% end %>
          <div class="mt-4 pt-4 border-t border-gray-200">
            <div class="grid grid-cols-2 gap-4">
              <div>
                <p class="text-sm text-gray-500">Total Products</p>
                <p class="text-lg font-semibold"><%= warehouse.total_products %></p>
              </div>
              <div>
                <p class="text-sm text-gray-500">Total Items</p>
                <p class="text-lg font-semibold"><%= warehouse.total_items %></p>
              </div>
            </div>
            <div class="grid grid-cols-2 gap-4 mt-3">
              <div>
                <p class="text-sm text-gray-500">Low Stock</p>
                <p class="text-lg font-semibold text-yellow-600"><%= warehouse.low_stock_items %></p>
              </div>
              <div>
                <p class="text-sm text-gray-500">Out of Stock</p>
                <p class="text-lg font-semibold text-red-600"><%= warehouse.out_of_stock_items %></p>
              </div>
            </div>
          </div>
          <div class="mt-4">
            <%= link_to admin_warehouse_path(warehouse), class: "text-blue-600 hover:text-blue-800 flex items-center" do %>
              View Details <i class="fas fa-arrow-right ml-1"></i>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <% if @warehouses.empty? %>
    <div class="bg-white shadow-md rounded-lg p-8 text-center">
      <div class="text-gray-400 mb-4">
        <i class="fas fa-warehouse text-5xl"></i>
      </div>
      <h3 class="text-lg font-medium text-gray-900 mb-2">No Warehouses Found</h3>
      <p class="text-gray-600 mb-4">You haven't added any warehouses yet.</p>
      <%= link_to new_admin_warehouse_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700" do %>
        <i class="fas fa-plus mr-2"></i> Add Your First Warehouse
      <% end %>
    </div>
  <% end %>
</div>
 