<div class="container mx-auto px-4 py-8">
  <div class="flex items-center justify-between mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-800">Edit Newsletter</h1>
      <p class="mt-2 text-gray-600">Update your newsletter content and settings.</p>
    </div>
    <%= link_to admin_newsletters_path, class: "text-gray-600 hover:text-gray-900 flex items-center" do %>
      <i class="fas fa-arrow-left mr-2"></i>
      Back to Newsletters
    <% end %>
  </div>
  <%= render 'form', newsletter: @newsletter %>
</div>
