<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">Newsletters</h1>
    <div class="flex space-x-2">
      <%= link_to "New Newsletter", new_admin_newsletter_path, class: "px-4 py-2 text-sm bg-gray-900 text-white rounded-md" %>
    </div>
  </div>
  <div class="flex space-x-2 mb-6">
    <%= link_to "All", admin_newsletters_path, class: "px-4 py-2 text-sm #{params[:status].blank? ? 'bg-gray-900 text-white' : 'bg-gray-200 text-gray-800'} rounded-md" %>
    <%= link_to "Drafts", admin_newsletters_path(status: 'draft'), class: "px-4 py-2 text-sm #{params[:status] == 'draft' ? 'bg-gray-900 text-white' : 'bg-gray-200 text-gray-800'} rounded-md" %>
    <%= link_to "Scheduled", admin_newsletters_path(status: 'scheduled'), class: "px-4 py-2 text-sm #{params[:status] == 'scheduled' ? 'bg-gray-900 text-white' : 'bg-gray-200 text-gray-800'} rounded-md" %>
    <%= link_to "Sent", admin_newsletters_path(status: 'sent'), class: "px-4 py-2 text-sm #{params[:status] == 'sent' ? 'bg-gray-900 text-white' : 'bg-gray-200 text-gray-800'} rounded-md" %>
  </div>
  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Title</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created At</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Sent At</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @newsletters.each do |newsletter| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= newsletter.title %></td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% case newsletter.status %>
              <% when "draft" %>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">Draft</span>
              <% when "scheduled" %>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">Scheduled</span>
              <% when "sending" %>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">Sending</span>
              <% when "sent" %>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">Sent</span>
              <% when "failed" %>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">Failed</span>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= newsletter.created_at.strftime("%B %d, %Y") %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= newsletter.sent_at&.strftime("%B %d, %Y") || "-" %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
              <%= link_to "View", admin_newsletter_path(newsletter), class: "text-blue-600 hover:text-blue-900 mr-3" %>
              <% if newsletter.draft? %>
                <%= link_to "Edit", edit_admin_newsletter_path(newsletter), class: "text-indigo-600 hover:text-indigo-900 mr-3" %>
                <%= button_to "Send Now", send_now_admin_newsletter_path(newsletter), method: :post, class: "text-green-600 hover:text-green-900 bg-transparent border-0 p-0 inline cursor-pointer mr-3" %>
              <% end %>
              <% unless newsletter.sent? %>
                <%= button_to "Delete", admin_newsletter_path(newsletter), method: :delete, data: { confirm: "Are you sure you want to delete this newsletter?" }, class: "text-red-600 hover:text-red-900 bg-transparent border-0 p-0 inline cursor-pointer" %>
              <% end %>
            </td>
          </tr>
        <% end %>
        <% if @newsletters.empty? %>
          <tr>
            <td colspan="5" class="px-6 py-4 text-center text-sm text-gray-500">No newsletters found.</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="mt-6">
    <%= paginate @newsletters %>
  </div>
</div>
