<%= form_with(model: [:admin,admin_stock], class: "contents") do |form| %>
  <% if admin_stock.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(admin_stock.errors.count, "error") %> prohibited this admin_stock from being saved:</h2>
      <ul class="list-disc ml-6">
        <% admin_stock.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="my-5">
    <%= form.label :size %>
    <%= form.text_field :size, class: ["block shadow-sm rounded-md border outline-hidden px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": admin_stock.errors[:size].none?, "border-red-400 focus:outline-red-600": admin_stock.errors[:size].any?}] %>
  </div>
  <div class="my-5">
    <%= form.label :quantity %>
    <%= form.number_field :quantity, class: ["block shadow-sm rounded-md border outline-hidden px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": admin_stock.errors[:quantity].none?, "border-red-400 focus:outline-red-600": admin_stock.errors[:quantity].any?}] %>
  </div>
  <div class="my-5">
    <%= form.label :product_id %>
    <%= form.text_field :product_id, class: ["block shadow-sm rounded-md border outline-hidden px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": admin_stock.errors[:product_id].none?, "border-red-400 focus:outline-red-600": admin_stock.errors[:product_id].any?}] %>
  </div>
 <div class="my-5">
  <% if admin_stock.product %>
    <% if admin_stock.product.images.attached? %>
      <span class="flex items-center gap-2">
        <% admin_stock.product.images.each do |image| %>
          <%= image_tag image, class: "h-32 w-32 object-cover rounded-md border" %>
        <% end %>
      </span>
    <% else %>
      <p class="text-sm text-gray-500">No images available for this product</p>
    <% end %>
  <% else %>
    <p class="text-sm text-gray-500">No product selected</p>
  <% end %>
</div>
  <div class="inline">
    <%= form.submit class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
