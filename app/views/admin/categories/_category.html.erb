<tr id="<%= dom_id category %>" class="hover:bg-gray-50">
  <td class="px-6 py-4 whitespace-nowrap">
    <%= link_to admin_products_path(category_id: category.id) do%>
      <% if category.image.attached?  %>
        <%= image_tag category.image,class:"h-10 w-10 rounded-full object-cover" %>
      <% else %>
        <div class="h-10 w-10 rounded-full bg-gray-200 flex items-center justify-center" do >
          <i class="fas fa-image text-gray-400"></i>
        </div>
      <% end %>
    <% end %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap">
    <div class="text-sm font-medium text-gray-900"><%= category.title %></div>
  </td>
  <td class="px-6 py-4">
    <div class="text-sm text-gray-500"><%= category.description %></div>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
    <%= link_to edit_admin_category_path(category), class: "text-gray-400 hover:text-blue-600 px-2" do %>
      <i class="fas fa-edit"></i>
    <% end %>
    <%= link_to [:admin,category],class:"text-gray-400 hover:text-green-600" do %>
      <i class="fas fa-eye"></i>
    <% end %>
    <%= button_to admin_category_path(category), 
        method: :delete, 
        class: "inline-block text-gray-400 hover:text-red-600 px-2",
        form: { 
          class: "inline-block",
          data: { 
            turbo_confirm: "Are you sure you want to delete this category?" 
          } 
        } do %>
      <i class="fas fa-trash"></i>
    <% end %>
  </td>
</tr>
