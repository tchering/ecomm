<% content_for :title, "Editing product" %>
<div class="container mx-auto px-4 py-6">
  <h1 class="font-bold text-2xl md:text-3xl lg:text-4xl mb-6">Editing product</h1>
  <div class="w-full">
    <%= render "form", product: @product %>
  </div>
  <div class="mt-6 flex flex-wrap gap-3">
    <%= link_to "Show this product", [:admin, @product], class: "rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-200 inline-block font-medium text-gray-700" %>
    <%= link_to "Back to products", admin_products_path, class: "rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-200 inline-block font-medium text-gray-700" %>
  </div>
</div>
