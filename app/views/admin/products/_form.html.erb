<%= form_with(model: [:admin,admin_product], class: "contents") do |form| %>
  <% if admin_product.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(admin_product.errors.count, "error") %> prohibited this admin_product from being saved:</h2>
      <ul class="list-disc ml-6">
        <% admin_product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="my-5">
    <%= form.label :title %>
    <%= form.text_field :title, class: ["block shadow-sm rounded-md border outline-hidden px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": admin_product.errors[:title].none?, "border-red-400 focus:outline-red-600": admin_product.errors[:title].any?}] %>
  </div>
  <div class="my-5">
    <%= form.label :description %>
    <%= form.text_area :description, rows: 4, class: ["block shadow-sm rounded-md border outline-hidden px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": admin_product.errors[:description].none?, "border-red-400 focus:outline-red-600": admin_product.errors[:description].any?}] %>
  </div>
  <div class="my-5">
    <%= form.label :price %>
    <%= form.text_field :price, class: ["block shadow-sm rounded-md border outline-hidden px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": admin_product.errors[:price].none?, "border-red-400 focus:outline-red-600": admin_product.errors[:price].any?}] %>
  </div>
  <div class="my-5">
    <%= form.label :images, "Product Images" %>
    <%= form.file_field :images, multiple: true, class: "block w-full text-sm text-gray-500 mt-2
      file:mr-4 file:py-2 file:px-4
      file:rounded-md file:border-0
      file:text-sm file:font-semibold
      file:bg-blue-50 file:text-blue-700
      hover:file:bg-blue-100" %>
    <% if admin_product.images.attached? %>
      <div class="mt-4 grid grid-cols-4 gap-4">
        <% admin_product.images.each do |image| %>
          <div class="relative group">
            <%= image_tag image, class: "w-full h-32 object-cover rounded-lg" %>
            <%= link_to admin_product_image_path(admin_product, image), 
                data: { turbo_method: :delete, turbo_confirm: "Remove this image?" },
                class: "absolute top-2 right-2 bg-red-500 text-white rounded-full p-1 opacity-0 group-hover:opacity-100 transition-opacity" do %>
              <i class="fas fa-times"></i>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="my-5">
    <%= form.label :active %>
    <%= form.check_box :active, class: ["block shadow-sm rounded-md border outline-hidden mt-2 h-5 w-5", {"border-gray-400 focus:outline-blue-600": admin_product.errors[:active].none?, "border-red-400 focus:outline-red-600": admin_product.errors[:active].any?}] %>
  </div>
  <div class="my-5">
    <%= form.label :category_id %>
    <%= form.collection_select :category_id, 
    Category.all,:id,:title,
    {prompt: "Select a category"},
    {class: ["block shadow-sm rounded-md border outline-hidden px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": admin_product.errors[:category_id].none?, "border-red-400 focus:outline-red-600": admin_product.errors[:category_id].any?}]} %>
  </div>
  <div class="inline">
    <%= form.submit class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
