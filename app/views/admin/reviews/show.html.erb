<div class="container mx-auto px-4 py-8">
  <div class="mb-6">
    <div class="flex items-center justify-between">
      <h1 class="text-2xl font-bold text-gray-900">Review Details</h1>
      <div class="flex space-x-2">
        <%= link_to "Back to Reviews", admin_reviews_path, class: "px-4 py-2 bg-gray-200 rounded-lg hover:bg-gray-300 transition-colors" %>
        <% if @review.approved.nil? %>
          <%= button_to "Approve", approve_admin_review_path(@review), method: :patch, class: "px-4 py-2 bg-green-500 text-white rounded-lg hover:bg-green-600 transition-colors" %>
          <%= button_to "Reject", reject_admin_review_path(@review), method: :patch, class: "px-4 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600 transition-colors" %>
        <% end %>
        <%= button_to "Delete Review", admin_review_path(@review), method: :delete, class: "px-4 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600 transition-colors", data: { confirm: "Are you sure you want to delete this review?" } %>
      </div>
    </div>
  </div>
  <div class="bg-white shadow-md rounded-lg overflow-hidden p-6">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Review Information</h2>
        <div class="space-y-4">
          <div>
            <p class="text-sm font-medium text-gray-500">Product</p>
            <p class="text-base text-gray-900">
              <%= link_to @review.product.title, admin_product_path(@review.product), class: "text-blue-600 hover:text-blue-800" %>
            </p>
          </div>
          <div>
            <p class="text-sm font-medium text-gray-500">Customer</p>
            <p class="text-base text-gray-900">
              <%= link_to @review.user.full_name, admin_user_path(@review.user), class: "text-blue-600 hover:text-blue-800" %>
            </p>
          </div>
          <div>
            <p class="text-sm font-medium text-gray-500">Rating</p>
            <div class="flex text-yellow-400">
              <% @review.rating.times do %>
                <i class="fas fa-star"></i>
              <% end %>
              <% (5 - @review.rating).times do %>
                <i class="far fa-star text-gray-300"></i>
              <% end %>
            </div>
          </div>
          <div>
            <p class="text-sm font-medium text-gray-500">Status</p>
            <p class="text-base text-gray-900">
              <% if @review.approved.nil? %>
                <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">
                  Pending
                </span>
              <% elsif @review.approved %>
                <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                  Approved
                </span>
              <% else %>
                <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                  Rejected
                </span>
              <% end %>
            </p>
          </div>
          <div>
            <p class="text-sm font-medium text-gray-500">Date Submitted</p>
            <p class="text-base text-gray-900"><%= @review.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
          </div>
        </div>
      </div>
      <div>
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Review Content</h2>
        <div class="space-y-4">
          <div>
            <p class="text-sm font-medium text-gray-500">Title</p>
            <p class="text-base text-gray-900"><%= @review.title %></p>
          </div>
          <div>
            <p class="text-sm font-medium text-gray-500">Content</p>
            <div class="mt-1 p-4 bg-gray-50 rounded-lg">
              <p class="text-base text-gray-900 whitespace-pre-line"><%= @review.content %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>