<%# encoding: utf-8 %>
    <%= turbo_stream.remove dom_id(@cart_item) %>

        <%= turbo_stream.replace "cart_count" do %>
            <%= render 'layouts/cart_count' %>
                <% end %>

                    <%= turbo_stream.replace "order_summary" do %>
                        <section class="mt-8 lg:mt-0 lg:col-span-4" id="order_summary">
                            <% if @cart.cart_items.any? %>
                                <%= render 'carts/order_summary_content' , cart: @cart %>
                                    <% else %>
                                        <div class="bg-white p-6 border border-gray-200 rounded-lg shadow-sm">
                                            <div class="space-y-4">
                                                <div class="flex items-center justify-between">
                                                    <span class="text-base text-gray-900">Subtotal</span>
                                                    <span class="text-base font-medium text-gray-900 tabular-nums"
                                                        id="cart_total">&euro;0.00</span>
                                                </div>

                                                <div class="flex items-center justify-between">
                                                    <div class="flex items-center gap-1">
                                                        <span class="text-base text-gray-900">Tax</span>
                                                        <span class="text-sm text-gray-500">(13%)</span>
                                                    </div>
                                                    <span class="text-base font-medium text-gray-900 tabular-nums"
                                                        id="cart_tax">&euro;0.00</span>
                                                </div>

                                                <div
                                                    class="flex items-center justify-between border-t border-gray-200 pt-4">
                                                    <span class="text-base font-medium text-gray-900">Total</span>
                                                    <span class="text-base font-medium text-gray-900 tabular-nums"
                                                        id="cart_order_total">&euro;0.00</span>
                                                </div>

                                                <p class="text-sm text-gray-500">Shipping and taxes calculated at
                                                    checkout.
                                                </p>

                                                <div class="text-center">
                                                    <%= link_to 'Continue Shopping' , root_path,
                                                        class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-base font-medium text-white bg-indigo-600 hover:bg-indigo-700"
                                                        %>
                                                </div>
                                            </div>
                                        </div>
                                        <% end %>
                        </section>
                        <% end %>