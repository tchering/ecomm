<%# encoding: utf-8 %>
<div class="flex py-6 border-b border-gray-200">
  <!-- Product Image -->
  <div class="h-24 w-24 flex-shrink-0 overflow-hidden rounded-md border border-gray-200">
    <% if cart_item.product.images.attached? %>
      <%= image_tag cart_item.product.images.first, class: "h-full w-full object-cover object-center" %>
    <% else %>
      <div class="h-full w-full bg-gray-200 flex items-center justify-center">
        <i class="fas fa-image text-gray-400"></i>
      </div>
    <% end %>
  </div>
  <!-- Product Details -->
  <div class="ml-4 flex flex-1 flex-col">
    <div>
      <div class="flex justify-between text-base font-medium text-gray-900">
        <h3>
          <%= link_to cart_item.product.title, product_path(cart_item.product) %>
        </h3>
        <p class="ml-4"><%= number_to_currency(cart_item.price) %></p>
      </div>
      <p class="mt-1 text-sm text-gray-500">
        <%= cart_item.product.sku %>
      </p>
    </div>
    <div class="flex flex-1 items-end justify-between text-sm">
      <!-- Quantity Controls -->
      <div class="flex items-center">
        <%= button_to "-", cart_item_path(cart_item, quantity: cart_item.quantity - 1),
            method: :patch,
            class: "px-2 py-1 border rounded-l hover:bg-gray-100" %>
        <span class="px-4 py-1 border-t border-b"><%= cart_item.quantity %></span>
        <%= button_to "+", cart_item_path(cart_item, quantity: cart_item.quantity + 1),
            method: :patch,
            class: "px-2 py-1 border rounded-r hover:bg-gray-100" %>
      </div>
      <!-- Remove Button -->
      <div class="flex">
        <%= button_to cart_item_path(cart_item),
            method: :delete,
            class: "font-medium text-indigo-600 hover:text-indigo-500",
            data: { turbo_confirm: "Are you sure?" } do %>
          Remove
        <% end %>
      </div>
    </div>
  </div>
</div>
