<!-- Main Container -->
<div class="bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Breadcrumb -->
    <nav class="flex mb-4 text-sm text-gray-500">
      <%= link_to "Home", root_path, class: "hover:text-gray-900" %>
      <span class="mx-2">/</span>
      <span class="text-gray-900"><%= @product.title %></span>
    </nav>
    <!-- Product Section -->
    <div class="grid grid-cols-12 gap-8">
      <!-- Thumbnail Gallery -->
      <div class="col-span-1">
        <div class="flex flex-col gap-3">
          <% if @product.images.attached? %>
            <% @product.images.each_with_index do |image, index| %>
              <button onclick="changeMainImage(this, '<%= url_for(image) %>')" 
                      class="w-20 h-20 rounded-lg overflow-hidden border border-gray-200 hover:border-rose-500 focus:outline-none transition-all
                             <%= 'border-rose-500' if index == 0 %>">
                <%= image_tag image, class: "w-full h-full object-cover" %>
              </button>
            <% end %>
          <% end %>
        </div>
      </div>
      <!-- Main Image -->
      <div class="col-span-6">
        <div class="rounded-lg overflow-hidden bg-gray-50">
          <% if @product.images.attached? %>
            <%= image_tag @product.images.first, 
                id: "mainImage",
                class: "w-full h-auto max-h-[700px] object-contain" %>
          <% else %>
            <div class="w-full h-[700px] flex items-center justify-center">
              <i class="fas fa-image text-gray-400 text-5xl"></i>
            </div>
          <% end %>
        </div>
      </div>
      <!-- Product Info -->
      <div class="col-span-5">
        <!-- Product Type -->
        <div class="text-sm text-gray-500 mb-2">20" INCHES / 160 GRAM FULL HEAD SET</div>
        <!-- Title -->
        <h1 class="text-2xl font-medium text-gray-900 mb-4"><%= @product.title %></h1>
        <!-- Price -->
        <div class="text-xl font-medium text-gray-900 mb-4">â‚¬<%= number_with_precision(@product.price, precision: 2) %></div>
        <!-- Reviews -->
        <div class="flex items-center gap-4 mb-6">
          <div class="flex items-center">
            <% 5.times do |i| %>
              <i class="fas fa-star <%= i < 4 ? 'text-yellow-400' : 'text-gray-300' %> text-sm"></i>
            <% end %>
          </div>
          <div class="text-sm text-gray-500">
            <span class="font-medium">287 Reviews</span>
            <span class="mx-2">|</span>
            <span>62 Questions</span>
            <span class="mx-2">|</span>
            <span>62 Answers</span>
          </div>
        </div>
        <!-- Backorder Notice -->
        <div class="text-rose-500 text-sm font-medium mb-6">ON BACKORDER UNTIL JUNE 8TH</div>
        <!-- Description -->
        <div class="text-sm text-gray-600 mb-8">
          <%= @product.description %>
        </div>
        <!-- Add to Cart Form -->
        <%= form_with(url: cart_items_path, 
            class: "space-y-6", 
            data: { 
              turbo: true,
              turbo_frame: "_top"
            }) do |f| %>
          <%= f.hidden_field :product_id, value: @product.id %>
          <!-- Quantity Selector -->
          <div>
            <%= f.label :quantity, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <div class="flex rounded-md shadow-sm w-32">
              <button type="button" onclick="decrementQuantity()"
                      class="relative inline-flex items-center px-3 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                <i class="fas fa-minus"></i>
              </button>
              <%= f.number_field :quantity, 
                  min: 1, 
                  value: 1,
                  class: "block w-full border-gray-300 text-center focus:ring-rose-500 focus:border-rose-500 sm:text-sm",
                  id: "quantity" %>
              <button type="button" onclick="incrementQuantity()"
                      class="relative inline-flex items-center px-3 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                <i class="fas fa-plus"></i>
              </button>
            </div>
          </div>
          
          <% cart_item = @cart.cart_items.find_by(product: @product) if @cart %>
          <div id="cart-notice-product-<%= @product.id %>">
            <% if cart_item %>
              <!-- Cart Notice -->
              <div class="flex items-center text-sm text-gray-600 bg-gray-50 p-3 rounded-md">
                <i class="fas fa-shopping-cart mr-2"></i>
                This item is already in your cart (<%= cart_item.quantity %> <%= 'item'.pluralize(cart_item.quantity) %>)
              </div>
            <% end %>
          </div>
          
          <!-- Add to Cart Button -->
          <%= f.button type: "submit", 
              class: "w-full bg-rose-500 border border-transparent rounded-md py-3 px-8 flex items-center justify-center text-base font-medium text-white hover:bg-rose-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-rose-500 transition-colors" do %>
            <i class="fas fa-shopping-bag mr-2"></i>
            <%= cart_item ? 'ADD MORE' : 'ADD TO BAG' %>
          <% end %>
          <!-- Watch Video Button -->
          <button class="w-full flex items-center justify-center gap-2 text-sm text-gray-900 py-2">
            <i class="fas fa-play-circle"></i>
            WATCH VIDEO
          </button>
        <% end %>
        <!-- Features -->
        <div class="grid grid-cols-3 gap-4 mt-8 border-t border-gray-200 pt-8">
          <div class="text-center">
            <div class="w-12 h-12 mx-auto mb-2 flex items-center justify-center">
              <i class="fas fa-globe text-2xl text-gray-600"></i>
            </div>
            <p class="text-xs text-gray-600">Free worldwide shipping*</p>
          </div>
          <div class="text-center">
            <div class="w-12 h-12 mx-auto mb-2 flex items-center justify-center">
              <i class="fas fa-undo text-2xl text-gray-600"></i>
            </div>
            <p class="text-xs text-gray-600">Easy 60-Day Exchanges & Returns</p>
          </div>
          <div class="text-center">
            <div class="w-12 h-12 mx-auto mb-2 flex items-center justify-center">
              <i class="fas fa-headset text-2xl text-gray-600"></i>
            </div>
            <p class="text-xs text-gray-600">24/7 Customer Support</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- JavaScript for Image Gallery and Quantity Control -->
<script>
  // Function to change main image
  function changeMainImage(thumbnail, imageUrl) {
    // Update main image
    document.getElementById('mainImage').src = imageUrl;

    // Update thumbnail selection
    document.querySelectorAll('button.w-20').forEach(thumb => {
      thumb.classList.remove('border-gray-200');
      thumb.classList.add('border-gray-200');
    });
    thumbnail.classList.remove('border-gray-200');
    thumbnail.classList.add('border-rose-500');
  }

  // Functions for quantity control
  function incrementQuantity() {
    const input = document.getElementById('quantity');
    const currentValue = parseInt(input.value) || 1;
    const newValue = Math.min(currentValue + 1, 99); // Max quantity of 99
    if (newValue !== currentValue) {
      input.value = newValue;
      input.dispatchEvent(new Event('change'));
    }
  }

  function decrementQuantity() {
    const input = document.getElementById('quantity');
    const currentValue = parseInt(input.value) || 1;
    if (currentValue > 1) {
      input.value = currentValue - 1;
      input.dispatchEvent(new Event('change'));
    }
  }
</script>
