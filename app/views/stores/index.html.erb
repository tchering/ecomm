<!-- Main Container -->
<div class="min-h-screen bg-gray-50">
  <!-- Categories Section -->
  <%= render 'categories' %>
  <!-- Hero Section -->
  <div class="bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
      <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl">
        Latest Collection
        <span class="block text-lg font-normal text-gray-500 mt-2">
          Discover our newest arrivals and best sellers
        </span>
      </h1>
    </div>
  </div>
  <!-- Products Grid Section -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Grid Container -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      <%= render partial: "product", collection: @products, as: :product %>
    </div>
    <!-- Empty State (shown when no products) -->
    <% if @products.empty? %>
      <div class="text-center py-12">
        <i class="fas fa-store text-gray-400 text-5xl mb-4"></i>
        <h3 class="text-lg font-medium text-gray-900">No Products Available</h3>
        <p class="mt-2 text-sm text-gray-500">Check back soon for new arrivals!</p>
      </div>
    <% end %>
  </div>
  <!-- Benefits Section -->
  <%= render 'benefits' %>
  <!-- Trending Section -->
  <%= render 'trending' %>
  <!-- Instagram Feed Section -->
  <%= render 'instagram_feed' %>
  <!-- Newsletter Section -->
  <div class="bg-white border-t border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="text-center">
        <h2 class="text-2xl font-bold tracking-tight text-gray-900">
          Subscribe to Our Newsletter
        </h2>
        <p class="mt-2 text-sm text-gray-500">
          Stay updated with our latest products and exclusive offers
        </p>
        <div class="mt-6 flex max-w-md mx-auto items-center gap-x-4">
          <label for="email-address" class="sr-only">Email address</label>
          <input type="email" id="email-address" 
                 class="min-w-0 flex-auto rounded-md border-0 px-3.5 py-2 text-gray-900 shadow-sm 
                        ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 
                        focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6"
                 placeholder="Enter your email">
          <button type="submit" 
                  class="flex-none rounded-md bg-blue-600 px-3.5 py-2.5 text-sm font-semibold 
                         text-white shadow-sm hover:bg-blue-500 focus-visible:outline 
                         focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600">
            Subscribe
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
