<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
  <% products.each do |product| %>
    <%= link_to store_path(product), class: "group block", data: { turbo: false } do %>
      <%= render "product", product: product %>
    <% end %>
  <% end %>
</div>
<% if products.empty? %>
  <div class="text-center py-12">
    <i class="fas fa-store text-gray-400 text-5xl mb-4"></i>
    <h3 class="text-lg font-medium text-gray-900">No Products Available</h3>
    <p class="mt-2 text-sm text-gray-500">Check back soon for new arrivals!</p>
  </div>
<% end %>
