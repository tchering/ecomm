<!-- Instagram Feed -->
<div class="bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="text-center mb-8">
      <h2 class="text-2xl font-bold tracking-tight text-gray-900">Follow Us on Instagram</h2>
      <p class="mt-2 text-sm text-gray-500">@yourstorehandle</p>
    </div>
    <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4">
      <% 6.times do %>
        <div class="aspect-square overflow-hidden rounded-lg">
          <img src="https://placehold.co/400x400" alt="Instagram post" class="w-full h-full object-cover hover:opacity-75 transition-opacity">
        </div>
      <% end %>
    </div>
  </div>
</div>
