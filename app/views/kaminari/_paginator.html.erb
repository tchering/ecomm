<%# The container tag
  - available local variables
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
    paginator:     the paginator that renders the pagination tags inside
-%>
<%= paginator.render do -%>
  <nav class="flex items-center justify-between border-t border-gray-200 px-4 sm:px-0 py-3">
    <div class="flex flex-1 w-0 sm:hidden">
      <%= prev_page_tag unless current_page.first? %>
      <%= next_page_tag unless current_page.last? %>
    </div>
    <div class="hidden sm:flex sm:flex-1 sm:items-center sm:justify-between">
      <div>
        <% if defined?(@collection) && @collection.respond_to?(:total_count) %>
          <p class="text-sm text-gray-700">
            Showing
            <span class="font-medium"><%= @collection.offset_value + 1 %></span>
            to
            <span class="font-medium"><%= [@collection.offset_value + @collection.limit_value, @collection.total_count].min %></span>
            of
            <span class="font-medium"><%= @collection.total_count %></span>
            results
          </p>
        <% end %>
      </div>
      <div>
        <span class="relative z-0 inline-flex rounded-md shadow-sm">
          <%= first_page_tag unless current_page.first? %>
          <%= prev_page_tag unless current_page.first? %>
          <% each_page do |page| -%>
            <% if page.display_tag? -%>
              <%= page_tag page %>
            <% elsif !page.was_truncated? -%>
              <%= gap_tag %>
            <% end -%>
          <% end -%>
          <%= next_page_tag unless current_page.last? %>
          <%= last_page_tag unless current_page.last? %>
        </span>
      </div>
    </div>
  </nav>
<% end -%> 