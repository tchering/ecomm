<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <h1 class="text-3xl font-bold text-gray-900 text-center mb-8">Frequently Asked Questions</h1>

  <div class="space-y-12">
    <% @categories.each do |category| %>
      <% faqs = @faqs.by_category(category) %>
      <% next if faqs.empty? %>
      
      <section>
        <h2 class="text-2xl font-semibold text-gray-900 mb-6"><%= category %></h2>
        <div class="space-y-4">
          <% faqs.each do |faq| %>
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
              <div class="p-6">
                <h3 class="text-lg font-medium text-gray-900 mb-2">
                  <%= faq.question %>
                </h3>
                <div class="prose prose-sm text-gray-600">
                  <%= faq.answer %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </section>
    <% end %>
  </div>

  <!-- Contact Support Section -->
  <div class="mt-12 pt-12 border-t border-gray-200">
    <div class="text-center">
      <h2 class="text-2xl font-semibold text-gray-900 mb-4">Still have questions?</h2>
      <p class="text-gray-600 mb-6">
        Can't find the answer you're looking for? Please chat with our friendly team.
      </p>
      <button
        data-controller="chatbot"
        data-action="chatbot#toggle"
        class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
      >
        <i class="fas fa-comments mr-2"></i>
        Chat with Support
      </button>
    </div>
  </div>
</div>
