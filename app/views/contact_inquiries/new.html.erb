<div class="max-w-2xl mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">Contact Us</h1>
  <p class="mb-6 text-gray-600">
    Have a question or feedback? We'd love to hear from you. Fill out the form below and we'll get back to you as soon as possible.
  </p>
  <%= form_with model: @inquiry, class: "space-y-4" do |f| %>
    <% if @inquiry.errors.any? %>
      <div class="bg-red-50 p-4 rounded-md mb-6">
        <h2 class="text-red-800 text-sm font-medium mb-2">
          <%= pluralize(@inquiry.errors.count, "error") %> prevented this inquiry from being sent:
        </h2>
        <ul class="list-disc pl-5 text-red-700 text-sm">
          <% @inquiry.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div>
      <%= f.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :name, required: true, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-200" %>
    </div>
    <div>
      <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.email_field :email, required: true, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-200" %>
    </div>
    <div>
      <%= f.label :subject, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :subject, required: true, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-200" %>
    </div>
    <div>
      <%= f.label :message, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_area :message, rows: 6, required: true, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-200" %>
    </div>
    <div class="pt-4">
      <%= f.submit "Send Message", class: "px-6 py-3 bg-gray-900 text-white rounded-md hover:bg-gray-800 transition-colors" %>
    </div>
  <% end %>
  <div class="mt-12 border-t border-gray-200 pt-8">
    <h2 class="text-xl font-bold mb-4">Other Ways to Reach Us</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <h3 class="text-lg font-medium mb-2">Customer Support</h3>
        <p class="text-gray-600">Email: support@yourecommstore.com</p>
        <p class="text-gray-600">Phone: (800) 555-1234</p>
        <p class="text-gray-600">Hours: Monday-Friday, 9am-5pm EST</p>
      </div>
      <div>
        <h3 class="text-lg font-medium mb-2">Business Inquiries</h3>
        <p class="text-gray-600">Email: business@yourecommstore.com</p>
        <p class="text-gray-600">Phone: (800) 555-5678</p>
      </div>
    </div>
  </div>
</div>
