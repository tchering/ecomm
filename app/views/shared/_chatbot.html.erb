<!-- Chatbot Component -->
<div data-controller="chatbot">
  <!-- Chatbot Button -->
  <button 
    data-action="chatbot#toggle"
    class="fixed bottom-6 right-6 bg-indigo-600 text-white rounded-full p-4 shadow-lg hover:bg-indigo-700 transition-colors z-50">
    <i class="fas fa-comments text-xl"></i>
  </button>
  <!-- Chatbot Container -->
  <div 
    data-chatbot-target="container"
    class="hidden fixed bottom-24 right-6 w-96 bg-white rounded-lg shadow-xl border border-gray-200 z-50">
    <!-- Header -->
    <div class="bg-indigo-600 text-white px-6 py-4 rounded-t-lg flex items-center justify-between">
      <div class="flex items-center">
        <div class="w-8 h-8 bg-white rounded-full flex items-center justify-center">
          <i class="fas fa-robot text-indigo-600"></i>
        </div>
        <h3 class="ml-3 font-medium">Support Bot</h3>
      </div>
      <button 
        data-action="chatbot#toggle"
        class="text-white hover:text-gray-200 transition-colors">
        <i class="fas fa-times"></i>
      </button>
    </div>
    <!-- Messages Container -->
    <div 
      data-chatbot-target="messages"
      class="h-96 overflow-y-auto p-6 space-y-4">
    </div>
    <!-- Input Form -->
    <form 
      data-action="submit->chatbot#sendMessage"
      class="border-t border-gray-200 p-4 flex items-center space-x-2">
      <input 
        type="text"
        data-chatbot-target="input"
        placeholder="Type your message..."
        class="flex-1 border border-gray-300 rounded-full px-4 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent"
      >
      <button 
        type="submit"
        class="bg-indigo-600 text-white rounded-full p-2 hover:bg-indigo-700 transition-colors">
        <i class="fas fa-paper-plane"></i>
      </button>
    </form>
  </div>
</div>